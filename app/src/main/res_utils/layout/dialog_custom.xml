<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LinearVMM"
    android:background="#777"
    >

    <LinearLayout
        android:id="@+id/llTitle"
        style="@style/LinearHMW"
        android:layout_height="80dp"
        android:background="#000"
        android:visibility="gone"
        android:gravity="center">
        <TextView
            android:id="@+id/txtTitle"
            style="@style/CustomDialogTitleText" />
    </LinearLayout>



    <LinearLayout
        android:id="@+id/llContent"
        style="@style/LinearVMW"
        android:layout_weight="1"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:gravity="center_horizontal"
        >

        <ImageView
          android:id="@+id/imgBodyIcon"
            style="@style/CustomDialogBodyIcon"
            android:visibility="gone"
            android:layout_marginTop="20dp"
            />
        <TextView
            android:id="@+id/txtBodyMessage"
            style="@style/CustomDialogBodyText"
            android:visibility="gone"
            android:layout_marginTop="30dp"
            />
    </LinearLayout>



    <LinearLayout
        android:id="@+id/llButton"
        style="@style/LinearHMW"
        android:layout_height="80dp"
        android:padding="10dp"
        android:visibility="gone"
        android:gravity="center" >

        <Button
            android:id="@+id/btnPositive"
            style="@style/CustomDialogButton" />
        <Button
            android:id="@+id/btnNeutral"
            style="@style/CustomDialogButton"
            android:layout_marginLeft="10dp"
            />
        <Button
            android:id="@+id/btnNegative"
            style="@style/CustomDialogButton"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>

</LinearLayout>